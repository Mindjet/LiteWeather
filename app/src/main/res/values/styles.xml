<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Immersive" parent="AppTheme.NoTitle">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Collapsed" parent="TextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Expend" parent="TextAppearance">
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
